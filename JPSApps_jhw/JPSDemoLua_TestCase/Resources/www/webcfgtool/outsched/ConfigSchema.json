{
	"type": "object",
	"references": {
		"weekdays": {
			"enum": ["Mon", "Tue", "Wed", "Thu", "Fri", "Sat", "Sun", "Bsn", "All"],
			"readonly": false
		},
		"functs": {
			"enum": ["OpenMainDoor", "CloseMainDoor", "AllLightsOn", "AllLightsOff"],
			"readonly": false
		},
		"communication": {
			"title": "Communication",
			"type": "object",
			"properties": {
				"spectype": {
					"title": "Communication Spec. Type",
					"type": "string",
					"enum": ["SERIAL", "NETWORK"]
				},
				"url": {
					"title": "Com URL",
					"type": "string"
				}
			}
		},
		"gpioctrl": {
			"title": "GpioCtrl",
			"type": "object",
			"properties": {
				"spectype": {
					"title": "Specific Type",
					"type": "integer",
					"minimum": 1,
					"maximum": 4
				},
				"sharedpath": {
					"title": "Module Shared Path",
					"type": "string"
				},
				"pollingtimems": {
					"title": "Polling Time (ms)",
					"type": "integer",
					"minimum": 50,
					"maximum": 100
				},
				"cfgmasks": {
					"title": "Config Raw Masks",
					"type": "array",
					"items": {
						"type": "object",
						"properties": {
							"maskid": {
								"title": "Maks Identifier",
								"type": "string",
								"enum": ["EnableMask", "InOutMask", "OutStatMask", "RiseEvtMask", "FallEvtMask"],
								"readonly": false
							},
							"maskval": {
								"title": "Hex Mask Value",
								"type": "string",
								"pattern": "^0x[A-Fa-f0-9]{8}$"
							}
						}
					},
					"minItems": 5,
					"maxItems": 5
				},
				"communication": {
					"$ref": "#/references/communication"
				}
			}
		},
		"ctrlpins": {
			"type": "array",
			"items": {
				"type": "object",
				"properties": {
					"funct": {
						"title": "Function",
						"$ref": "#/references/functs"
					},
					"id": {
						"title": "Pin ID",
						"type": "integer",
						"minimum": 0,
						"maximum": 255
					},
					"activest": {
						"title": "StartMode",
						"type": "integer",
						"minimum": 0,
						"maximum": 1
					},
					"lowperiodms": {
						"title": "LowTime(ms)",
						"type": "integer",
						"minimum": 0,
						"maximum": 10000
					},
					"highperiodms": {
						"title": "HighTime(ms)",
						"type": "integer",
						"minimum": 0,
						"maximum": 10000
					},
					"pulseno": {
						"title": "PulsesNo",
						"type": "integer",
						"minimum": 0,
						"maximum": 10000
					}
				}
			},
			"minItems": 0,
			"maxItems": 50
		}
	},
	"properties": {
		"outscdservice": {
			"title": "Outputs Scheduler",
			"type": "object",
			"properties": {
				"spectype": {
					"title": "Specific Type",
					"type": "integer",
					"minimum": 0,
					"maximum": 1
				},
				"checkinterval": {
					"title": "Check Interval (ms)",
					"type": "integer",
					"minimum": 1000,
					"maximum": 59000
				},
				"gpioctrl": {
					"$ref": "#/references/gpioctrl"
				},
				"functsdescr": {
					"title": "Functions Description",
					"type": "object",
					"properties": {
						"ctrlpins": {
							"$ref": "#/references/ctrlpins"
						}
					}
				},
				"scheddescr": {
					"title": "Scheduler Activities",
					"type": "object",
					"properties": {
						"activities": {
							"type": "array",
							"items": {
								"type": "object",
								"properties": {
									"funct": {
										"$ref": "#/references/functs"
									},
									"when": {
										"type": "array",
										"items": {
											"type": "object",
											"properties": {
												"day": {
													"$ref": "#/references/weekdays"
												},
												"time": {
													"type": "string",
													"pattern":"^([0-9]|0[0-9]|1[0-9]|2[0-3]){2}:[0-5][0-9]$"
												},
												"enabled": {
													"type": "boolean"
												}
											}
										}
									},
									"specdays": {
										"type": "array",
										"items": {
											"type": "object",
											"properties": {
												"date": {
													"type": "string",
													"pattern":"^(3[01]|[12][0-9]|0[1-9])/(1[0-2]|0[1-9])/[0-9]{2}$"
												},
												"descr": {
													"type": "string"
												},
												"periodic": {
													"type": "boolean"
												},
												"enabled": {
													"type": "boolean"
												}
											}
										}
									}
								}
							},
							"minimum": 1,
							"maximum": 10
						}
					}
				}
			}
		}
	}
}
